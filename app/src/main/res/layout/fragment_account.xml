<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cooksmart.example.cooksmart.Account">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:background="@drawable/back2"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:backgroundTint="#E6E6E6"
            android:padding="10dp"
            android:background="@drawable/round_small_border"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:weightSum="3"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="2"
                    android:weightSum="3"
                    android:layout_height="match_parent">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="20dp"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:layout_margin="10dp"
                        android:text="Aakash Kumar"
                        android:background="@drawable/rounded_background"


                        />


                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="30dp"
                        android:textSize="25dp"

                        android:textColor="#fff"
                        android:layout_marginVertical="10dp"

                        android:layout_weight="1"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:layout_margin="10dp"
                        android:textAlignment="center"
                        android:text="Chef ID : BW234"
                        android:background="@drawable/rounded_background"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="25dp"
                        android:layout_marginVertical="10dp"
                        android:textColor="#fff"
                        android:layout_weight="1"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:layout_margin="10dp"
                        android:textAlignment="center"
                        android:text="Bhagalpur,Bihar"
                        android:background="@drawable/rounded_background"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="4"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="3"
                android:background="@drawable/round_small_border"
                android:backgroundTint="#000000"
                android:elevation="5dp"
                android:padding="10dp"
                android:text="Total recipes"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/attended_classes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/round_small_border"
                android:padding="10dp"
                android:backgroundTint="#0681C3"
                android:textColor="#fff"
                android:textSize="20dp"
                android:elevation="5dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="4"
            android:background="#FFFFFF"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="3"
                android:background="@drawable/round_small_border"
                android:backgroundTint="#000000"
                android:elevation="5dp"
                android:padding="10dp"
                android:text="Total Events"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_classes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textAlignment="center"
                android:backgroundTint="#0681C3"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="@drawable/round_small_border"
                android:padding="10dp"
                android:textSize="20dp"
                android:elevation="5dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="4"
            android:background="#FFFFFF"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="3"
                android:background="@drawable/round_small_border"
                android:backgroundTint="#000000"
                android:elevation="5dp"
                android:padding="10dp"
                android:text="Events Attended"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/round_small_border"
                android:padding="10dp"
                android:textSize="20dp"
                android:backgroundTint="#0681C3"
                android:textColor="#fff"
                android:elevation="5dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="#FFFFFF"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">

        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textSize="25dp"
            android:padding="10dp"
            android:paddingHorizontal="20dp"
            android:textColor="#FFF"
            android:background="#000"
            />

        <RelativeLayout
            android:layout_gravity="right|top"
            android:id="@+id/progress_layout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp">

            <!--progress bar implementation-->
            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circular_shape"
                android:indeterminate="false"
                android:progress="90"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="50"
                android:textColor="#000"
                android:textSize="28sp"
                android:textStyle="bold" />
        </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>